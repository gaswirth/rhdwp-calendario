@require "partials/_global.styl"
@require "partials/_plugins.styl"

#calendario
	margin-right $spacer
	-ff-body()
	position relative
	
	.plugin-title
		font-size 2em
		-ff-headline()
	

#calendario-workspace
	width 99%
	position relative
	
	.fc-event
		color white
		border 3px
		border-radius 3px
		font-size 1em
		padding 0.5em 0.35em
	
	.editorial-calendar
		width 80%
		float left
		
		.fc-header-toolbar
			.fc-center
				font-size 2em
		
		.fc-time
			display none
		
		.fc-event
			&.filter-hidden
				display none
	
	.status-draft
		background-color gray
	
	.status-publish
		background-color black
	
	.status-future
		background-color blue
	
	.calendario-sidebar
		width 18%
		position absolute
		right 0
		top 0
		
		.calendario-sidebar-container
			z-index 999
			position relative
		
		.calendario-sidebar-box-title
			margin-bottom $halfspacer
			font-size 1.2em
		
		.calendario-sidebar-box
			width 100%
			height auto
			border-radius 3px
			border 3px solid black
			padding 0 $quarterspacer
			position relative
			
			.fc-event
			.event-toggle
				margin $quarterspacer
		
		.calendario-event-toggles
			margin-bottom $spacer
			
			.toggles
				display flex
				align-content space-around
				margin $quarterspacer 0
				
				.event-toggle
					width 50%
					display inline-block
					text-align center
					cursor pointer
					font-size 1.1em
					-unselectable()
					@extends #calendario-workspace .fc-event
					border-width 2px
					border-style solid
					transition all 0.15s ease
					
					&.status-publish
						background-color black
						border-color @background-color
					
					&.status-draft
						background-color gray
						border-color @background-color
					
					&.status-future
						background-color blue
						border-color @background-color
					
					&.filter-hidden
						background-color transparent
						color black
			
		.calendario-unscheduled-drafts
			min-height 300px
			transition all 0.25s ease
			
			.unscheduled-drafts-list
				padding 0
				margin $halfspacer
				
				.fc-event
					-opacity(0.5)
					
					&.load-complete
						-opacity(1)


.ui-draggable
	cursor pointer
	z-index 999